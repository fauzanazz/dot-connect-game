// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(cuid())
  username String? @unique
  password String?
  Score    Score[]
}

model Score {
  id     String @id @default(cuid())
  score  Int?
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
